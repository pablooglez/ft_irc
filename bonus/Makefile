	@echo "$(RESET)"
	@echo "$(YELLOW)$(BOLD)\tðŸ› ï¸ 42MLG: $(RESET)$(WHITE)albelope & pablogon$(RESET)"
	@echo "$(PURPLE)\tðŸ“‚ Project:$(RESET) $(CYAN)ft_irc_bot$(RESET)"
	@echo "$(GREEN)\tðŸ”¹ Commands: $(BOLD)make clean fclean re$(RESET)"
	@echo "$(BLUE)\tðŸ§° Compiler: $(BOLD)$(CC)$(RESET)\n"

$(NAME): $(OBJ)
	@$(CC) $(CPPFLAGS) $(OBJ) -o $(NAME)
	@echo "$(GREEN)$(NAME) compiled successfully!$(RESET)\n"

%.o: %.cpp
	@$(CC) $(CPPFLAGS) -c $< -o $@

clean:
	@$(RM) $(OBJ)
	@echo "$(YELLOW)Object files deleted$(RESET)\n"

fclean: clean
	@$(RM) $(NAME)
	@echo "$(RED)$(NAME) deleted$(RESET)\n"

re: fclean all

.PHONY: all clean fclean re