NAME = bot

SRC = Bot.cpp BotCmd.cpp FileTransfer.cpp  FileRebuilder.cpp FileManager.cpp main.cpp

OBJ = $(SRC:.cpp=.o)

RM = rm -f

CC = c++
CPPFLAGS = -Wall -Wextra -Werror -std=c++98 


BOLD	:= '\033[1m'
RED     := '\033[31;1m'
GREEN   := '\033[32;1m'
YELLOW	:= '\033[33m'
BLUE	:= '\033[34;1m'
MAGENTA	:= '\033[35m'
CYAN	:= '\033[36m'
WHITE	:= '\033[37m'
RESET   := '\033[0m'

all: head $(NAME)

